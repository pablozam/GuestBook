<%- include('partials/header.ejs') %>

<div class="col-md-4 offset-md-4">
    <h2 class="text-center" >Escribe una entrada nueva</h2>

    <form method="post">
        <div class="form-group">
            <label for="title">Title</label>
            <input type="text" name="title" id="title" class="form-control" placeholder="Entry a New Title" required>
        </div>

        <div class="form-group">
            <label for="body">Entry Text</label>
            <textarea name="body" id="body" rows="3" class="form-control" required></textarea>
        </div>

        <div class="form-group">
            <input type="submit" value="Post Entry" class="btn btn-primary">
        </div>

    </form>
</div>


